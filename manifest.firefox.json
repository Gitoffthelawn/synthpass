{
  "name": "SynthPass",
  "short_name": "SynthPass",
  "description": "High-security password synthesizer", 
  "omnibox": { "keyword" : "src" },
  "version": "0.1.9",
  "manifest_version": 2,
  "icons": {
  "16": "images/icon16.png",
  "48": "images/icon48.png",
  "128": "images/icon128.png"
  },
  "permissions": [
    "storage", "tabs", "http://*/*", "https://*/*", "file://*/*"
  ],
  "content_security_policy": "default-src 'self'; img-src 'self' data:; style-src 'self'",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
        "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
        },
        "default_title": "SynthPass",
        "default_popup": "popup.html"
  },
  "content_scripts": [{
      "matches": [
        "<all_urls>"
      ],
	  "all_frames": true,
      "js": [
	  "content.js"]
    }],
	
"applications": {
  	"gecko": {
    	"id": "synthpass@passlok.com"
  	}
  }
}